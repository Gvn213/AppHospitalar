<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.patriciasantos.apphospitalar.Cadastro.LoginActivity">

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="237dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/btnEntrar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:ignore="OnClick"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="235dp" />

    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtSenha"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="194dp"
        android:ems="10"
        android:hint="Digite seu e-mail"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnEntrar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="170dp"
        android:text="LOGIN"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSenha"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnEntrar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="252dp"
        android:text="SENHA"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtLogin"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="275dp"
        android:ems="10"
        android:hint="Informe sua senha"
        android:inputType="textPassword"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:id="@+id/txtEsqueci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenha"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/txtLogin"
        android:text="Esqueci minha senha."
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="28dp"
        android:layout_toEndOf="@+id/txtLogin" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/btnEntrar"
        app:srcCompat="@drawable/app" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="31dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCadastrar"
        android:layout_marginEnd="-48dp"
        android:layout_marginBottom="-87dp"
        android:layout_toStartOf="@+id/imageView2"
        android:indeterminateTint="@color/colorhosp"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="31dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCadastrar"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/imageView2"
        android:indeterminateTint="@color/colorhosp"/>
</RelativeLayout>